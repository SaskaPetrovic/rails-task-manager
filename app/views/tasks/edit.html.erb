<div class="container mt-5">
  <h1>Edit Task</h1>

  <div class="mt-3 py-3">
    <%= form_with(model: @task, url: task_path(@task), method: :patch, local: true) do |form| %>
      <div class="mb-3">
        <%= form.label :title, class: "form-label" %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :details, class: "form-label" %>
        <%= form.text_area :details, class: "form-control", rows: 4 %>
      </div>

      <div class="form-check">
        <%= form.check_box :completed, class: "form-check-input" %>
        <%= form.label :completed, class: "form-check-label" do %>
          Mark as completed
        <% end %>
      </div>

      <%= form.submit "Update Task", class: "btn btn-primary mt-3" %>
    <% end %>
  </div>

  <hr class="my-4">

  <%= link_to 'Back to list', tasks_path, class: "btn btn-secondary" %>
</div>
