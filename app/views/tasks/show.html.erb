<!-- app/views/tasks/show.html.erb -->
<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center">
    <h1><%= @task.title %></h1>
    <%= link_to 'Edit', edit_task_path(@task), class: "btn btn-primary" %>
  </div>

  <div class="card mt-3">
    <div class="card-body pb-0 bg-light">
      <p><%= @task.details %></p>
    </div>
  </div>

  <div class="mt-3">
    <div class="form-check">
      <%= check_box_tag "completed", "1", @task.completed, class: "form-check-input", disabled: true %>
      <label class="form-check-label">
        <% if @task.completed %>
          This task is completed
        <% else %>
          This task is not completed yet
        <% end %>
      </label>
    </div>

    <%= link_to 'Back to list', tasks_path, class: "btn btn-primary mt-3" %>
  </div>
</div>
