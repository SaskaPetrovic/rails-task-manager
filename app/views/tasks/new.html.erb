<!-- app/views/tasks/new.html.erb -->
<div class="container mt-5">
  <h1>New Task</h1>

  <div class="mt-3 py-3">
    <%= form_with(model: @task, url: tasks_path, local: true) do |form| %>
      <div class="mb-3">
        <%= form.label :title, class: "form-label" %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :details, class: "form-label" %>
        <%= form.text_area :details, class: "form-control", rows: 4 %>
      </div>

      <%= form.submit "Create Task", class: "btn btn-primary" %>
    <% end %>
  </div>

  <hr class="my-4">

  <%= link_to 'Back to list', tasks_path, class: "btn btn-secondary" %>
</div>
