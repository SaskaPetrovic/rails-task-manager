<!-- app/views/tasks/index.html.erb -->
<div class="container mt-5">
  <h1>My Tasks</h1>

  <ul class="list-group mt-3">
    <% @tasks.each do |task| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <div>
          <label class="form-check-label">
            <%= check_box_tag "task_#{task.id}", "1", task.completed, class: "form-check-input me-2" %>
          </label>
          <%= link_to task.title, task_path(task.id), class: "task-title", data: { toggle: "tooltip", placement: "top" }, title: "Click to view details" %>
        </div>
         <%= button_to task_path(task), method: :delete, class: "btn btn-link text-danger p-0 m-0 btn-delete", remote: true, data: { confirm: 'Are you sure you want to delete this task?' } do %>
          <i class="fa fa-trash"></i>
        <% end %>
      </li>
    <% end %>
  </ul>

  <%= link_to 'Add New Task', new_task_path, class: "btn btn-primary mt-3" %>
</div>
